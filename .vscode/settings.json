{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "node_modules": true
  },
  "files.associations": {
    // "*.md": "mdx"
  },
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "latex", "plaintext"],
  "spellright.parserByClass": {
    "mdx": {
      "parser": "markdown"
    }
  },
  "git.postCommitCommand": "sync"
}
